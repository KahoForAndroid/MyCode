<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_rela"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >

        <ImageView
            android:id="@+id/doctorIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/point"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/radius_red"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctorIcon"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/nick_name"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/age_text"
                    android:layout_marginLeft="20dp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/remark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/main_textSize"
                android:layout_marginTop="15dp"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/counseling_rela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/counseling_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_img"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/white"
                    android:text="@string/Invitation"
                    />
                <TextView
                    android:id="@+id/text_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/white"
                    android:text="@string/counsel"
                    />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/counseling_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/counseling_rela"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:text="@string/counseling"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/Communicating_rela"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/radius_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/Communicating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/main_Smaill_textSize"
                android:text="@string/Communicateing"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>