<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"
            />

        <LinearLayout
            android:id="@+id/switch_icon_head_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
        <ImageView
            android:id="@+id/icon_head"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_head"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/tips_textColor"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/onClick_switch_icon_head"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:text="@string/nickname"
                />
            <EditText
                android:id="@+id/nick_name_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:hint="@string/nick_name_hint"
                android:theme="@style/MyEditText"
                android:textSize="@dimen/main_textSize"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:text="@string/sex"
                />

            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                >
            <ImageView
                android:id="@+id/select_sex_img"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:src="@drawable/select_man"
                android:layout_marginLeft="30dp"
                />
                <TextView
                    android:id="@+id/man_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/white"
                    android:text="@string/man"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="45dp"

                    />

                <TextView
                    android:id="@+id/woman_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_textSize"
                    android:textColor="@color/black"
                    android:text="@string/woman"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="55dp"

                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
            <TextView
                android:id="@+id/Date_of_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:text="@string/Date_of_birth"
                />
            <TextView
                android:id="@+id/birth_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Date_of_birth"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textSize"
                android:text="@string/selected_date"
                android:textColor="@color/main_color"
                android:gravity="center_horizontal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/birth_ed"
                android:layout_marginLeft="20dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Date_of_birth"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:text="@string/region"
                />

            <TextView
                android:id="@+id/region_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_textSize"
                android:textColor="@color/main_color"
                android:text="@string/select_region"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/region_Text"
                android:layout_marginLeft="30dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/region"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textTitleSize"
            android:layout_toRightOf="@+id/checkbox"
            android:text="@string/Doctor_certification"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
            <zj.health.health_v1.MyView.SwitchView
                android:id="@+id/switch_view"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/on_click_button"
            android:layout_marginTop="40dp"
            android:text="@string/register_finish"
            android:textColor="@color/white"
            android:textSize="@dimen/main_textTitleSize"
            />
    </LinearLayout>


</LinearLayout>