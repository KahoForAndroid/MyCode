<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="@string/prescription_name"
                />
            <TextView
                android:id="@+id/prescription_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/title_bottom_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="@string/much_of_taking_medicine"
                />
            <TextView
                android:id="@+id/much_of_taking_medicine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/title_bottom_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="@string/Times_of_taking_medicine"
                />
            <TextView
                android:id="@+id/Times_of_taking_medicine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/title_bottom_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="@string/Consumption_of_taking_medicine"
                />
            <TextView
                android:id="@+id/Consumption_of_taking_medicine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/title_bottom_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="@string/Course_of_taking_medicine"
                />
            <TextView
                android:id="@+id/Course_of_taking_medicine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_textTitleSize"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="xxx"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/title_bottom_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>