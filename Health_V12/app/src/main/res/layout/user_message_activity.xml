<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include layout="@layout/top_title_include"/>
    
    <RelativeLayout
        android:id="@+id/icon_rela"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/icon_head"
            />
        <ImageView
            android:id="@+id/right_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/return_right_gary"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/icon_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/name_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/nickname"
            />
        <TextView
            android:id="@+id/update_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/update"
            android:textColor="@color/main_color"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/update_text"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/sex_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/sex"
            />
        <ImageView
            android:id="@+id/right_img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/return_right_gary"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img3"
            android:layout_marginRight="5dp"
            android:background="@null"
            />
    </RelativeLayout>




    <RelativeLayout
    android:id="@+id/height_rela"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:layout_marginTop="1dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/height"
        />
    <ImageView
        android:id="@+id/right_img4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/return_right_gary"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_img4"
        android:layout_marginRight="5dp"
        android:background="@null"
        />
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/weight_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/weight2"
            />
        <ImageView
            android:id="@+id/right_img5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/return_right_gary"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_img5"
            android:layout_marginRight="5dp"
            android:background="@null"
            />
    </RelativeLayout>

</LinearLayout>