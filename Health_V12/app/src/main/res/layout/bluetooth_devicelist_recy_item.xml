<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/disconnect_button"
            android:layout_marginRight="5dp"
            >
        <TextView
            android:id="@+id/deviceName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/deviceAddress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/deviceName_text"
            />
        </LinearLayout>

        <Button
            android:id="@+id/function_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius_blue"
            android:textColor="@color/white"
            android:text="@string/function"
            android:layout_toLeftOf="@+id/disconnect_button"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/disconnect_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius_blue"
            android:textColor="@color/white"
            android:text="@string/disconnect_device"
            />
    </RelativeLayout>

</LinearLayout>