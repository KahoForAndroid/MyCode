<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/type_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/blood_pressure"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textSize"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="@string/activity_setting"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/type_text_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textTitleSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/Blood_pressure_measurement_open"
            />

        <zj.health.health_v1.MyView.SwitchView
            android:id="@+id/setting_Blood_pressure_switch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textTitleSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/First_page_priority_settings"
            />

        <zj.health.health_v1.MyView.SwitchView
            android:id="@+id/setting_First_page_switch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_textSize"
        android:textColor="#999999"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/Equipment_control"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/deviceList_recy"
        android:layout_width="match_parent"
        android:layout_height="130dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/device_null_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_textSize"
        android:textColor="#999999"
        android:layout_centerInParent="true"
        android:text="@string/connect_device_null"
        android:visibility="gone"
        />
</RelativeLayout>


    <ImageView
        android:id="@+id/add_bluetooth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add_bluetooth"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />


    <RelativeLayout
        android:id="@+id/BodyTypeUtil_Rela"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/typeUtil_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textTitleSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/Blood_pressure_instrument"
            />

        <zj.health.health_v1.MyView.SwitchView
            android:id="@+id/switch_bottom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

</LinearLayout>