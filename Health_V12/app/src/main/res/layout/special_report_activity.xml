<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_bg_main"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/Special_report"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="20%"
        app:layout_marginRightPercent="17%"
        app:layout_marginBottomPercent="7%"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/body"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/head_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="10.5%"
        app:layout_marginTopPercent="19%"
        android:background="@drawable/radius_from_body_blue"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/head"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/Vertebra_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="14%"
        app:layout_marginTopPercent="33.3%"
        android:background="@drawable/radius_from_body_blue"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/Vertebra"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/body_fluid_textview"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="77%"
        app:layout_marginTopPercent="33.5%"
        android:background="@drawable/radius_from_body_blue"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/body_fluid"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/limb_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="79%"
        app:layout_marginTopPercent="51%"
        android:background="@drawable/radius_from_body_blue"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/limb"
        />
</android.support.percent.PercentRelativeLayout>