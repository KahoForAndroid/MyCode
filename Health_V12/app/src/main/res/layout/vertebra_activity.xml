<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_bg"

    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/Vertebra"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top"
        android:background="#4A708B"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_textTitleSize"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="@string/report_tips"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="30%"
        app:layout_marginRightPercent="15%"
        app:layout_marginBottomPercent="20%"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/spine" />

    </RelativeLayout>

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/Thoracic_vertebra_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="5.5%"
        app:layout_marginTopPercent="30%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/Thoracic_vertebra"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/Lumbar_vertebra_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="42.5%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/Lumbar_vertebra"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/Caudal_vertebra_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="56%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/Caudal_vertebra"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/cervical_vertebra_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="83%"
        app:layout_marginTopPercent="32.5%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/cervical_vertebra"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/nerve_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="78%"
        app:layout_marginTopPercent="45.5%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/nerve"
        />

    <zj.health.health_v1.MyView.MyTextView
        android:id="@+id/skin_textview"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:gravity="center"
        app:layout_marginLeftPercent="76%"
        app:layout_marginTopPercent="57%"
        android:background="@drawable/radius_from_body_gary"
        android:textSize="@dimen/main_textSize"
        android:textColor="@color/white"
        android:text="@string/skin"
        />

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/on_click_button"
        android:text="@string/commit_report"
        android:textColor="@color/white"
        android:textSize="@dimen/main_textTitleSize"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="20%"
        app:layout_marginTopPercent="85%"
        />
</android.support.percent.PercentRelativeLayout>